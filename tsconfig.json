{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"removeComments": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
